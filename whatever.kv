#:kivy 2.0.0
#:import utils kivy.utils

WindowManager:
    FirstWindow:
    SecondWindow:
    ThirdWindow:
    FourthWindow:
    FifthWindow:


<FirstWindow>:
    name:"first"

    canvas.before:
        Color: 
            rgba:(1,1,1)
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        padding:50
        spacing: 30
        
        Image:
            source: 'Slug.png'
            allow_stretch: True
            keep_ratio: True

        GridLayout:
            cols:2
            spacing:30

            
            RoundedButton:
                text: "Fitness Center"
                font_size: 32
                bold: True
                sizehint: 0.1,0.1
                background_normal:''
                #background_color: (253/255,199/255,0,1)
                #background_color:utils.get_color_from_hex('#fdc700')

                on_release: 
                    app.root.current = "Fitness"
                    root.manager.transition.direction = "up"
            RoundedButton:
                text: "McHenry Library"
                font_size: 32
                bold: True
                sizehint: 0.1,0.1
                background_normal:''
                #background_color: (253/255,199/255,0,1)
                #background_color:utils.get_color_from_hex('#fdc700')
                on_release: 
                    app.root.current = "Library"
                    root.manager.transition.direction = "up"
            RoundedButton:
                text: "Baytree Bookstore"
                font_size: 32
                bold: True
                sizehint: 0.1,0.1
                background_normal:''
                #background_color: (253/255,199/255,0,1)
                #background_color:utils.get_color_from_hex('#fdc700')
                on_release: 
                    app.root.current = "Baytree"
                    root.manager.transition.direction = "up"
            RoundedButton:
                text: "S&E"
                font_size: 32
                bold: True
                sizehint: 0.1,0.1
                background_normal:''
                #background_color: (253/255,199/255,0,1)
                #background_color:utils.get_color_from_hex('#fdc700')
                on_release: 
                    app.root.current = "S&E"
                    root.manager.transition.direction = "up"

<RoundedButton@Button>
    background_color:(0,0,0,0)
    background_normal:''
    canvas.before:
        Color:
            rgba:utils.get_color_from_hex('#fdc700')
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius:[58]



<SecondWindow>:
    name:"Fitness"


    BoxLayout:
        orientation: "vertical"
        size:root.width, root.height

        Button:
            text: "Go Back"
            font_size: 32
            on_release: 
                app.root.current = "first"
                root.manager.transition.direction = "down"

