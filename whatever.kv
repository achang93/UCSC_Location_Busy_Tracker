#:kivy 2.0.0
#:import utils kivy.utils

WindowManager:
    FirstWindow:
    SecondWindow:


<FirstWindow>:
    name:"first"

    canvas.before:
        Color: 
            rgba:(1,1,1)
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        padding:50
        spacing: 30
        
        Image:
            source: 'Santa.png'
            allow_stretch: True
            keep_ratio: True

        GridLayout:
            cols:2
            spacing:30

            
            Button:
                text: "Fitness Center"
                font_size: 32
                bold: True
                sizehint: 0.1,0.1
                background_normal:''
                #background_color: (253/255,199/255,0,1)
                background_color:utils.get_color_from_hex('#fdc700')
                on_release: 
                    app.root.current = "second"
                    root.manager.transition.direction = "up"
            Button:
                text: "McHenry Library"
                font_size: 32
                bold: True
                sizehint: 0.1,0.1
                background_normal:''
                #background_color: (253/255,199/255,0,1)
                background_color:utils.get_color_from_hex('#fdc700')
                on_release: 
                    app.root.current = "second"
                    root.manager.transition.direction = "up"
        Button:
            text: "Submit"
            font_size: 50
            bold: True
            on_press: root.press()
            #center button
            pos_hint:{'center_x':0.5}
            #resize button
            size_hint:(0.3,0.3)
            #RGB - A
            background_normal:''
            #background_color: (253/255,199/255,0,1)
            background_color:utils.get_color_from_hex('#fdc700')



<SecondWindow>:
    name:"second"


    BoxLayout:
        orientation: "vertical"
        size:root.width, root.height

        Button:
            text: "Go Back"
            font_size: 32
            on_release: 
                app.root.current = "first"
                root.manager.transition.direction = "down"
