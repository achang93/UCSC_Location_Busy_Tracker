#:kivy 2.0.0
#:import utils kivy.utils
#:import check_UCSC_fitness UCSC_populartimes.check_UCSC_fitness
#:import check_UCSC_mchenry UCSC_populartimes.check_UCSC_mchenry
#:import check_UCSC_sne UCSC_populartimes.check_UCSC_sne
#:import check_UCSC_baytree UCSC_populartimes.check_UCSC_baytree

WindowManager:
    FirstWindow:
    SecondWindow:
    ThirdWindow:
    FourthWindow:
    FifthWindow:


<FirstWindow>:
    name:"first"

    canvas.before:
        Color: 
            rgba:(1,1,1)
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        padding:50
        spacing: 30
        
        Image:
            source: 'Slug.png'
            allow_stretch: True
            keep_ratio: True

        GridLayout:
            cols:2
            spacing:30

            
            RoundedButton:
                text: "Fitness Center"
                font_size: 32
                bold: True
                sizehint: 0.1,0.1
                background_normal:''
                #background_color: (253/255,199/255,0,1)
                #background_color:utils.get_color_from_hex('#fdc700')

                on_release: 
                    app.root.current = "Fitness"
                    root.manager.transition.direction = "up"
            RoundedButton:
                text: "McHenry Library"
                font_size: 32
                bold: True
                sizehint: 0.1,0.1
                background_normal:''
                #background_color: (253/255,199/255,0,1)
                #background_color:utils.get_color_from_hex('#fdc700')
                on_release: 
                    app.root.current = "Library"
                    root.manager.transition.direction = "up"
            RoundedButton:
                text: "Baytree Bookstore"
                font_size: 32
                bold: True
                sizehint: 0.1,0.1
                background_normal:''
                #background_color: (253/255,199/255,0,1)
                #background_color:utils.get_color_from_hex('#fdc700')
                on_release: 
                    app.root.current = "Baytree"
                    root.manager.transition.direction = "up"
            RoundedButton:
                text: "S&E"
                font_size: 32
                bold: True
                sizehint: 0.1,0.1
                background_normal:''
                #background_color: (253/255,199/255,0,1)
                #background_color:utils.get_color_from_hex('#fdc700')
                on_release: 
                    app.root.current = "S&E"
                    root.manager.transition.direction = "up"

<RoundedButton@Button>
    background_color:(0,0,0,0)
    background_normal:''
    canvas.before:
        Color:
            rgba:utils.get_color_from_hex('#fdc700')
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius:[58]



<SecondWindow>:
    name:"Fitness"
    canvas.before:
        Color: 
            rgba:(1,1,1)
        Rectangle:
            pos: self.pos
            size: self.size


    BoxLayout:
        orientation: "vertical"
        size:root.width, root.height
        padding:50
        spacing: 30

        Label:
            #text: "UCSC Fitness Center"
            text: f'Status: {check_UCSC_fitness()}'
            canvas.before:
                Color:
                    rgba:(1,1,1,1)
                Rectangle:
                    size: self.size
                    pos:self.pos
            #color of text
            color:(0,0,0,1)
            font_size: 50
            size_hint:(1,0.3)
            bold: True
            italic: True
            underline: True
            outline_color:(1,1,1)
            outline_width: 2

        RoundedButton:
            text: "Go Back"
            font_size: 32
            pos_hint:{'center_x':0.5}
            #resize button
            size_hint:(1,0.3)
            on_release: 
                app.root.current = "first"
                root.manager.transition.direction = "down"

<ThirdWindow>:
    name:"Library"


    BoxLayout:
        orientation: "vertical"
        size:root.width, root.height

        Button:
            text: "Go Back 1"
            font_size: 32
            on_release: 
                app.root.current = "first"
                root.manager.transition.direction = "down"
<FourthWindow>:
    name:"Baytree"


    BoxLayout:
        orientation: "vertical"
        size:root.width, root.height

        Button:
            text: "Go Back 2"
            font_size: 32
            on_release: 
                app.root.current = "first"
                root.manager.transition.direction = "down"
<FifthWindow>:
    name:"S&E"


    BoxLayout:
        orientation: "vertical"
        size:root.width, root.height

        Button:
            text: "Go Back 3"
            font_size: 32
            on_release: 
                app.root.current = "first"
                root.manager.transition.direction = "down"
